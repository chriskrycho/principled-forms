{{#docs-demo as |demo|}}
  {{#demo.example name='required-text-principled-form-field.hbs'}}
    {{#principled-form-field
        label='Name'
        type=this.user.name.type
        onInput=(action 'handleInput' 'name')
        as |field|
    }}
      <label>
        {{field.label}}
        <input
          type={{field.type}}
          oninput={{field.onInput}}
          value={{this.user.name.value}}
        />
      </label>
    {{/principled-form-field}}
    <br/>

    Required: {{this.user.name.isRequired}}
    Value: {{this.user.name.value}}
    Validity: {{this.user.name.validity.type}}
  {{/demo.example}}

  {{demo.snippet 'required-text-principled-form-field.hbs'}}
{{/docs-demo}}

